@model ImageUpload.Models.ImportImagen
@{
    ViewBag.Title = "ImageProfile";
}
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<h2>Crear un Directorio Dinamico</h2>

<!--Usando Boosstrap-->
<div class="card">
    <h1 class="card-header">Subir Imagen</h1>
    <div class="card-body">
        @using (Html.BeginForm("UploadImage", "Imagen", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div class="form-group">
                <input class="form-control" type="text" name="nombrefolder" placeholder="Ingresa el nombre del Directorio" />
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="nombreImagen" placeholder="Ingresa el nombre de la Imagen" />
            </div>
            <div class="form-group">
                <div class="input-group">
                    <input type="file" class="form-control" id="Archivo" accept=".png" name="Archivo">
                    <button class="btn btn-success" type="submit">Crear Directorio</button>
                </div>
            </div>

        }

    </div>
    <h4>Resultado de la Operacion</h4>
    <h6>@ViewBag.MensajeFolder</h6>
    <h6>@ViewBag.MensajeImagen</h6>
</div>

